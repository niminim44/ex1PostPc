<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        tools:text="Hi, what's up?"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:background="@drawable/message_drawable"/>

    <TextView
        android:id="@+id/time_stamp_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="21:00"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintStart_toEndOf="@id/message_text_view"
        app:layout_constraintBottom_toBottomOf="@id/message_text_view"/>

</android.support.constraint.ConstraintLayout>